    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const costData = {
                google: 11.52,
                officeBase: 10.08,
                teamsAddon: 20.16 - 10.08, 
                copilotAddon: 57.6,
            };

            const chartCtx = document.getElementById('costChart').getContext('2d');
            let costChart;

            const chartConfig = {
                type: 'bar',
                data: {
                    labels: ['Google Workspace', 'Office 365 E1'],
                    datasets: [{
                        label: 'Base Annual Cost',
                        data: [costData.google, costData.officeBase],
                        backgroundColor: ['#16A34A', '#2563EB'],
                        borderColor: ['#15803D', '#1D4ED8'],
                        borderWidth: 1
                    }, {
                        label: 'MS Teams Add-on',
                        data: [0, 0],
                        backgroundColor: '#60A5FA',
                        borderColor: '#3B82F6',
                        borderWidth: 1
                    }, {
                        label: 'MS Copilot Add-on',
                        data: [0, 0],
                        backgroundColor: '#93C5FD',
                        borderColor: '#60A5FA',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            stacked: true,
                            title: {
                                display: true,
                                text: 'Total Annual Cost (in Millions of USD) for 160,000 Users'
                            }
                        },
                        y: {
                            stacked: true,
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.x) + 'M';
                                    }
                                    return label;
                                }
                            }
                        },
                        legend: {
                            position: 'bottom',
                        }
                    }
                }
            };

            function updateChart() {
                const teamsEnabled = document.getElementById('teamsToggle').checked;
                const copilotEnabled = document.getElementById('copilotToggle').checked;

                costChart.data.datasets[1].data = [0, teamsEnabled ? costData.teamsAddon : 0];
                costChart.data.datasets[2].data = [0, copilotEnabled ? costData.copilotAddon : 0];
                
                costChart.update();
            }

            costChart = new Chart(chartCtx, chartConfig);
            
            document.getElementById('teamsToggle').addEventListener('change', updateChart);
            document.getElementById('copilotToggle').addEventListener('change', updateChart);

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('main section');

            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.4
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href').substring(1) === entry.target.id) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>

